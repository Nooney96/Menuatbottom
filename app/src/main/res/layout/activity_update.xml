<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a1351"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".groupandbills.Update">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_blue_light"
        android:hint="Title"
        android:inputType="textFilter|textMultiLine"
        android:maxLength="12"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursorcolor" />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTitle"
        android:layout_marginTop="54dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:digits="0123456789"
        android:hint="Amount"
        android:inputType="number"
        android:maxLength="8"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursorcolor" />


    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spBussinessType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonshape"
        android:text="OK" />


    <TextView
        android:id="@+id/by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAmount"
        android:layout_marginTop="60dp"
        android:text="Paid By:"
        android:textColor="@android:color/background_light"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spBussinessType"
        style="@style/Platform.Widget.AppCompat.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:backgroundTint="@android:drawable/screen_background_light_transparent"
        android:prompt="@string/name_prompt"></Spinner>
</RelativeLayout>
