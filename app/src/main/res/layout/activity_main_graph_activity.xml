<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_graph_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a1351"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".graphs.Main_graph_activity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">

    </com.github.mikephil.charting.charts.PieChart>

    <ListView
        android:id="@+id/list_below_2"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/screen_background_light_transparent"></ListView>


</RelativeLayout>