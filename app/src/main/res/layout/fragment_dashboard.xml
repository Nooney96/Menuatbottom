<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a1351">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/btnCreateChat"
            android:layout_width="176dp"
            android:layout_height="182dp"
            android:layout_alignStart="@+id/btnCreateBill"
            android:layout_alignTop="@+id/btnGraphsNav"
            android:background="@drawable/button_shape"

            android:text="Chat"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGraphsNav"
            android:layout_width="176dp"
            android:layout_height="182dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnAboutUs"
            android:layout_marginTop="226dp"
            android:background="@drawable/button_shape"
            android:text="Graphs"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="176dp"
            android:layout_height="182dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/button_shape"
            android:text="About Us"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCreateBill"
            android:layout_width="176dp"
            android:layout_height="182dp"
            android:layout_alignTop="@+id/btnAboutUs"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/button_shape"
            android:text="Groups and Bills"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>