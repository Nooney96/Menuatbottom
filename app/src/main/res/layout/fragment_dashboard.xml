<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a1351">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Dash Board" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="94dp"
            android:layout_height="86dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:src="@android:drawable/ic_lock_lock" />

        <Button
            android:id="@+id/btnCreateGroup"
            android:layout_width="196dp"
            android:layout_height="166dp"
            android:layout_above="@+id/btnCreateBill"
            android:layout_alignParentStart="true"
            android:background="#368181"
            android:text="Create Group" />

        <Button
            android:id="@+id/btnGraphsNav"
            android:layout_width="190dp"
            android:layout_height="166dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnCreateGroup"
            android:background="#368181"
            android:text="Graphs" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="190dp"
            android:layout_height="162dp"
            android:layout_alignStart="@+id/btnGraphsNav"
            android:layout_alignTop="@+id/btnCreateBill"
            android:layout_marginStart="0dp"
            android:background="#368181"
            android:text="About Us" />

        <Button
            android:id="@+id/btnCreateBill"
            android:layout_width="196dp"
            android:layout_height="162dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#368181"
            android:text="Create New Bill" />

    </RelativeLayout>
</FrameLayout>